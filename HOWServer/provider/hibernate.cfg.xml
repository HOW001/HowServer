<!-- sql.Blob blob BLOB -->
<hibernate-configuration>

	<session-factory>
		<property name="connection.driver_class">org.gjt.mm.mysql.Driver</property>
		<!--<property name="connection.url">jdbc:mysql://localhost:3306/gameserver</property>-->
  		<property name="connection.url">jdbc:mysql://127.0.0.1:3306/car_server</property>   
<!-- 		<property name="connection.url">jdbc:mysql://127.0.0.1:3306/car_server?useUnicode=true&amp;characterEncoding=UTF-8</property> -->
<!-- 		<property name="connection.url">jdbc:mysql://192.168.1.56:3306/db_gc1_2_2</property> -->
		<property name="connection.useUnicode">true</property>
		<property name="connection.username">root</property>
		<property name="connection.password">123456</property>
		<property name="hibernate.connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property>
		<property name="hibernate.c3p0.max_size">200</property>
		<property name="hibernate.c3p0.min_size">30</property>
		<property name="hibernate.c3p0.timeout">1800</property>
		<property name="hibernate.c3p0.max_statements">200</property>
		<property name="hibernate.c3p0.idle_test_period">120</property>
		<!-- 当连接池中的连接用完时，C3P0一次性创建新连接的数目 -->
		<property name="hibernate.c3p0.acquire_increment">20</property>
		<property name="hibernate.c3p0.validate">true</property>
		<!-- 正式部署时关闭以下三属性 -->
		<property name="show_sql">false</property>
		<property name="format_sql">false</property>
		<property name="use_sql_comments">false</property>
		<!-- 数据库类型 -->
		<property name="dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
		<!-- 隔离级别　1：读操作未提交 2:读操作已提交 4：可重读 8：可串行化-->
		<property name="connection.isolation">2</property>
		<property name="hibernate.cache.provider_class">org.hibernate.cache.EhCacheProvider</property>
		<property name="hibernate.cache.use_query_cache">true</property>
		<!--查询缓存使用情况,会消耗大量资源，正式时关闭 -->
		<property name="hibernate.generate_statistics">false</property>
		<mapping resource="db/model/Player.hbm.xml"></mapping>
		<mapping resource="db/model/Title.hbm.xml"></mapping>
		<mapping resource="db/model/Item.hbm.xml"></mapping>
		<mapping resource="db/model/PlayerPack.hbm.xml"></mapping>
		<mapping resource="db/model/PlayerNonBasicInfo.hbm.xml"></mapping>
		<mapping resource="db/model/PlayerCompetitionInfo.hbm.xml"></mapping>
		<mapping resource="db/model/GameGM.hbm.xml"></mapping>
		<mapping resource="db/model/Mail.hbm.xml"></mapping>	
		<mapping resource="db/model/Hero.hbm.xml"></mapping>	
		<mapping resource="db/model/User.hbm.xml"></mapping>
	</session-factory>

</hibernate-configuration>